<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".rege">


    <TextView
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:layout_height="76dp"
        android:text="Registration"
        android:layout_marginTop="70dp"
        android:textAlignment="textStart"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/regename"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/baseline"
        android:drawableLeft="@drawable/person"
        android:ems="10"
        android:hint="  Enter Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/regermail"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/baseline"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:hint="  Enter Email"
        android:inputType="text" />

    <EditText
        android:id="@+id/regepass"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/baseline"
        android:drawableLeft="@drawable/baseline_vpn_key_24"
        android:ems="10"
        android:hint="  Enter Password"
        android:inputType="text"
        android:text="" />

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:id="@+id/btnrege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up" />


    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Alredy have an account?click to sign in"
        android:textAlignment="center" />

